<!DOCTYPE html>
<html>
<head>
  <title>Checklistr</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="columns">
  <div id="side">

      <%= link_to 'Добавить страницу', :controller => "pages",
                  :action =>"new"
      %>

      <%= pages.each do |page| %>
        <p>
          <%= link_to "#{page.title}", :controller=>"pages",
                      :action=>"show",
                      :id=>page.id %>
        </p>
    <% end %>

  </div>

</div>
<div id="main">
  <%= yield %>
</div>

</body>
</html>
