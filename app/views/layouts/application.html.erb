<!DOCTYPE html>
<html>
<head>
  <title>Checklistr</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <% yield(:head)%>
</head>
<body>

<div id="columns">
  <div id="side">
     <a href="/"><%= image_tag("logo.png") %></a>
      <div class="add_to_sidebar">
      <%= link_to 'Добавить страницу', :controller => "pages",
                  :action =>"new"%>
      </div>
     <div class="pagenav">
       <% pages.each do |page| %>
          <%= link_to page.title, page_path(page)%>    
     <br/>
     <% end %>
     </div>
  </div>
</div>
<div id="main">
  <%= yield %>
</div>

</body>
</html>
